<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.qzt.dao.EasybuyNewsMapper">
    <select id="getNewsList"  resultType="EasybuyNews">


        SELECT * FROM easybuy_news ORDER BY id DESC LIMIT #{count};


    </select>

    <select id="getNewsCounts" resultType="EasybuyNews">

      SELECT * FROM easybuy_news ORDER BY id DESC LIMIT #{pageStar},#{pageSize};

    </select>

    <select id="getNewsCount" resultType="Integer">

        SELECT count(1) from easybuy_news;
    </select>
</mapper>